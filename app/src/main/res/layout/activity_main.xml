<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorPrimary">

   <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="@color/colorPrimary"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/anna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anna Shteyngart" />

        <Button
            android:id="@+id/ksenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/anna"
            android:layout_below="@id/anna"
            android:text="Ksenia Lopukhina" />

        <Button
            android:id="@+id/pavel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/ksenia"
            android:layout_below="@id/ksenia"
            android:text="Pavel Jilinski" />

        <Button
            android:id="@+id/svetlana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/ksenia"
            android:layout_below="@id/pavel"
            android:text="Svetlana Netchaeva" />

    </LinearLayout>
</RelativeLayout>
